conky.config = {


  own_window_type = 'override',
	alignment = 'top_right',
	background = true,
	update_interval = 2.0,
	total_run_times = 0,
	use_xft = true,
	own_window = true,
	own_window_transparent = true,
	own_window_hints = 'undecorated,below,skip_pager,skip_taskbar',
	own_window_class = 'Conky',
	own_window_transparent = true,
	double_buffer = true,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = true,
	gap_x = 12,
	gap_y = 40,
	no_buffers = true,
	uppercase = false,
	cpu_avg_samples = 2,
	override_utf12_locale = 'no',

	xinerama_head = 0,


};

conky.text = [[
${font Trebuchet MS:size=30} ${alignc}${time %H:%M}${font Trebuchet MS:size=12}
${font Trebuchet MS:size=12}  ${alignc}${time %a %b %d %Y}${font Trebuchet MS:size=12}
${font sans-serif:bold:size=12}${color FFCC00}SYSTEM $stippled_hr
${font sans-serif:normal:size=12}${color FFFFCC}Host: $alignr $nodename
$sysname $alignr $machine
Kernel: $alignr $kernel

Uptime: $alignr $uptime
Procs: $alignr $processes
Running: $alignr $running_processes
Load Avg: $alignr $loadavg

${font sans-serif:bold:size=12}${color FFCC00}PROCESSORS $stippled_hr
${font sans-serif:normal:size=12}${color FFFFCC}CPU History:
${cpugraph 25,0 -t}
CPU1: ${cpu cpu1} % ${cpubar cpu1}
CPU2: ${cpu cpu2} % ${cpubar cpu2}
CPU3: ${cpu cpu3} % ${cpubar cpu3}
CPU4: ${cpu cpu4} % ${cpubar cpu4}

${font sans-serif:bold:size=12}${color FFCC00}TOP PROCS (CPU) $stippled_hr
${font sans-serif:normal:size=12}${color FFFFCC}${top name 1} $alignr ${top cpu 1} %
${top name 2} $alignr ${top cpu 2} %
${top name 3} $alignr ${top cpu 3} %
${top name 4} $alignr ${top cpu 4} %
${top name 5} $alignr ${top cpu 5} %
${top name 6} $alignr ${top cpu 6} %

${font sans-serif:bold:size=12}${color FFCC00}TOP PROCS (MEM) $stippled_hr
${font sans-serif:normal:size=12}${color FFFFCC}${top_mem name 1} $alignr ${top_mem mem 1} %
${top_mem name 2} $alignr ${top_mem mem 2} %
${top_mem name 3} $alignr ${top_mem mem 3} %
${top_mem name 4} $alignr ${top_mem mem 4} %

${font sans-serif:bold:size=12}${color FFCC00}MEMORY $stippled_hr
${font sans-serif:normal:size=12}${color FFFFCC}RAM $alignc $mem / $memmax $alignr $memperc %
${membar}
${font sans-serif:normal:size=12}${color FFFFCC}SWAP $alignc $swap / $swapmax $alignr $swapperc % 
${swapbar}

${font sans-serif:bold:size=12}${color FFCC00}DISK SPACE $stippled_hr
${font sans-serif:normal:size=12}${color FFFFCC}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /} %
${fs_bar /}

${font sans-serif:bold:size=12}${color FFCC00}BATTERY $stippled_hr
${font sans-serif:normal:size=12}${color FFFFCC}/ $alignc ${battery_percent BAT1} / 100 $alignr ${battery_percent BAT1 /} %
${battery_bar BAT1 /}

]];
